    "url": "https://github.com/martshaw/playground.git"
  },
  "dependencies": {
    "gulp-bump": "^2.1.0",
    "snyk": "^1.14.3"
  },
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-preset-es2015-rollup": "^1.1.1",
    "closure-compiler": "^0.2.12",
    "commitizen": "^2.8.2",
    "compression": "^1.6.2",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^2.11.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.2.2",
    "eslint-plugin-react": "^5.1.1",
    "express": "^4.13.4",
    "express-handlebars": "^3.0.0",
    "ghooks": "^1.2.3",
    "graceful-fs": "^4.1.4",
    "gulp": "^3.9.0",
    "gulp-buble": "^0.5.1",
    "gulp-closure-compiler": "^0.4.0",
    "gulp-compile-handlebars": "^0.6.1",
    "gulp-concat": "^2.6.0",
    "gulp-eslint": "^2.0.0",
    "gulp-markdown": "^1.2.0",
    "gulp-markdown-to-json": "^0.2.1",
    "gulp-notify": "^2.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-rollup": "^1.9.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-tap": "^0.1.3",
    "gulp-uglify": "^1.5.3",
    "gulp-util": "^3.0.7",
    "path": "^0.12.7",
    "require-dir": "^0.3.0",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-node-resolve": "^1.5.0",
    "semantic-release": "^4.3.5",
    "semantic-release-cli": "^1.4.1",
    "validate-commit-msg": "^2.6.1"
  },
  "scripts": {
    "commit": "git-cz",
    "test": "snyk test && mocha",
    "babel-node": "babel-node server.js --presets es2015,stage-2",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "config": {
    "ghooks": {
      "pre-commit": "gulp lint",
      "commit-msg": "validate-commit-msg",
      "post-merge": "npm install",
      "post-rewrite": "npm install"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "cZConfig": {
    "path": "node_modes/cz-conventional-changelog"
  },
  "snyk": true
}
